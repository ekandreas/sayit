{
    "name": "ekandreas/sayit",
    "description": "Converts text to speech via AWS and place it in a S3 bucket folder",
    "keywords": [
        "ekandreas",
        "sayit"
    ],
    "homepage": "https://github.com/ekandreas/sayit",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Ek",
            "email": "andreas@elseif.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "aws/aws-sdk-php": "^3.185"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Ekandreas\\Sayit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ekandreas\\Sayit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
